<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onion.service.user.mapper.NewsMapper">

    <select id="findTabs" resultType="com.onion.pojo.news.Tab">
        select * from news_type
    </select>

    <select id="findTabNews" resultMap="com.onion.mapper.tabNews">
        select n.*,
          img.id as img_id,
          img.newsId as img_newsId,
          img.imageUrl as img_imageUrl
          from news n
            INNER JOIN news_image img on img.newsId = n.id
            WHERE n.newsType = #{newsType}
    </select>
</mapper>